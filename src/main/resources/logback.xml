<configuration>

    <appender name="FILE" class="ch.qos.logback.core.FileAppender">
        <encoder>
            <pattern>%date{ISO8601} %-5level %logger{36} %X{sourceThread} - %msg%n</pattern>
        </encoder>
        <append>false</append>
        <file>info.log</file>
    </appender>

    <logger name="akka" level="INFO" />

    <root level="INFO">
        <appender-ref ref="FILE" />
    </root>

</configuration>